@model WebhooksAPIStore.Models.RegisterUser
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

  
        <div class="col-lg-4 col-md-4 ">
        </div>
        <div class="col-lg-4 col-md-4 ">
            <div class="card">
                <div class="header">
                    <h4 class="title">Register</h4>
                </div>
                <div class="content">
                    <form>
                        @if (TempData["UserMessage"] != null)
                        {<div class="alert alert-success">
                            <strong>Message!</strong> @TempData["UserMessage"].
                        </div>
                        }
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>Username</label>
                                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control border-input" } })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>Password</label>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control border-input" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>EmailID</label>
                                    @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control border-input" } })
                                    @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                        <div class="text-left">
                            <button type="submit" class="btn btn-info btn-fill btn-wd">Create Profile</button>
                        </div>
                        <div class="text-right">
                            @Html.ActionLink("Back to Login Page", "Login", "Login", null, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                            <div class="clearfix"></div>
</form>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 ">
        </div>
    
}
